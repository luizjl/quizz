<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ria.especializacao.inf.ufg.quiz" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ria.especializacao.inf.ufg.quiz.PrincipalActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ria.especializacao.inf.ufg.quiz.CategoriaActivity"
            android:label="@string/title_activity_categoria"
            android:parentActivityName="ria.especializacao.inf.ufg.quiz.PrincipalActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ria.especializacao.inf.ufg.quiz.PrincipalActivity" />
        </activity>
        <activity
            android:name=".EstatisticaActivity"
            android:label="@string/app_name"
            android:parentActivityName=".PrincipalActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ria.especializacao.inf.ufg.quiz.PrincipalActivity" />
        </activity>
        <activity
            android:name="ria.especializacao.inf.ufg.quiz.QuestaoActivity"
            android:label="@string/title_activity_questao"
            android:parentActivityName="ria.especializacao.inf.ufg.quiz.PrincipalActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ria.especializacao.inf.ufg.quiz.PrincipalActivity" />
        </activity>
    </application>

</manifest>
