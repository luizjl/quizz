<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ria.especializacao.inf.br.quiz" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PrincipalActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CategoriaActivity"
            android:label="@string/title_activity_categoria"
            android:parentActivityName=".PrincipalActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ria.especializacao.inf.br.quiz.PrincipalActivity" />
        </activity>
        <activity
            android:name=".EstatisticaActivity"
            android:label="@string/app_name"
            android:parentActivityName=".PrincipalActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ria.especializacao.inf.br.quiz.PrincipalActivity" />
        </activity>
        <activity
            android:name=".QuestaoActivity"
            android:label="@string/title_activity_questao"
            android:parentActivityName=".PrincipalActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ria.especializacao.inf.br.quiz.PrincipalActivity" />
        </activity>
        <activity
            android:name=".EnviarQuestaoActivity"
            android:label="@string/title_activity_enviar_questao"
            android:parentActivityName=".SugestoesActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ria.especializacao.inf.br.quiz.SugestoesActivity" />
        </activity>
        <activity
            android:name=".SugestoesActivity"
            android:label="@string/title_activity_sugestoes"
            android:parentActivityName=".PrincipalActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ria.especializacao.inf.br.quiz.PrincipalActivity" />
        </activity>
    </application>

</manifest>
